@model Project33.Models.LoginViewModel

<!DOCTYPE html>

<html lang="en">
<style>
    label{
        font-family: Alice;
        color: #550008;
    }
    h2{
        font-family: Alice;
        color: #550008;
    }
    a.font_color {
        color: #550008;
        font-family: Alice;
    }
    a.font_color:active {
        color: #913039;
        font-family: Alice;
    }
    a.font_color:link {
        color: #550008;
        font-family: Alice;
    }
    a.font_color:visited {
        color: #240004;
        font-family: Alice;
    }
    .center_div{
        background: #f1d8b9;
        border-radius: 30px;
        position:absolute;
        width: 444px;
        height: 344px;
        top: 50%;
        left: 50%;
        margin: -172px 0 0 -222px;
        padding: 50px 70px 50px 70px;
    }
    input {
        right: 0;
        border-radius: 10px;
    } 
    .register_style{
        background: #f5ebdc;
        border-radius: 15px;
        padding: 5px;
        text-align: center;
    }
    img.background {
    z-index: -1;
    min-height: 120%;
      min-width: 640px;
      width: 100%;
      height: auto;
      position: fixed;
      top: 0;
      left: 0;
    }
</style>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <meta charset="utf-8">
</head>
<body class="my-0 mx-0 ">
<img class="background" src="~/Assets/UPProjectLoginRegister.jpg" alt="фон"/>
<h2>Вход на сайт</h2>
<div class="center_div">
    <div class="register_style">
        <a asp-action="Register" asp-controller="Account" class="font_color" style="font-size: large">Зарегистрироваться</a>
    </div>
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"/>
        <div style="padding-top: 20px">
            <div class="form-group">
                <label asp-for="Login">Введите логин </label>
                <input type="text" asp-for="Login"/>
                <span asp-validation-for="Login"/>
            </div>
            <div class="form-group">
                <label asp-for="Password">Введите пароль</label>
                <input asp-for="Password"/>
                <span asp-validation-for="Password"/>
            </div>
            <div>
                <label asp-for="RememberMe">Запомнить меня</label>
                <input asp-for="RememberMe"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-outline-dark"/>
            </div>
        </div>
    </form>
</div>
</body>
</html>

