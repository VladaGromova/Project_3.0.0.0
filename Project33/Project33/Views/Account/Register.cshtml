@model Project33.Models.RegisterViewModel

<style>
    label{
        font-family: Alice;
        color: #550008;
    }
    h2{
        font-family: Alice;
        color: #550008;
    }
    a.font_color {
        color: #550008;
        font-family: Alice;
    }
    a.font_color:active {
        color: #913039;
        font-family: Alice;
    }
    a.font_color:link {
        color: #550008;
        font-family: Alice;
    }
    a.font_color:visited {
        color: #240004;
        font-family: Alice;
    }
    .center_div{
        background: #f1d8b9;
        border-radius: 30px;
        position:absolute;
        width: 444px;
        height: 506px;
        top: 50%;
        left: 50%;
        margin: -253px 0 0 -212px;
        padding: 50px 70px 50px 70px;
    }
    input {
        right: 0;
        border-radius: 10px;
    } 
    .register_style{
        background: #f5ebdc;
        border-radius: 15px;
        padding: 5px;
        text-align: center;
    }
    img.background {
        z-index: -1;
        min-height: 120%;
          min-width: 640px;
          width: 100%;
          height: auto;
          position: fixed;
          top: 0;
          left: 0;
        }
</style>
<body>
<img class="background" src="~/Assets/UPProjectLoginRegister.jpg" alt="фон"/>
<h2>Регистрация</h2>
<div class="center_div">
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <!--<div class="validation" asp-validation-summary="ModelOnly" />-->
        <div asp-validation-summary="All"></div>
        <div>
            <div>
                <label asp-for="Email">Введите логин</label><br/>
                <input type="text" asp-for="Login"/>
                <span asp-validation-for="Login"/>
            </div>
            <div>
                <label asp-for="Email">Введите Email</label><br/>
                <input type="text" asp-for="Email"/>
                <span asp-validation-for="Email"/>
            </div>
            <div>
                <label asp-for="Email">Введите возраст</label><br/>
                <input type="text" asp-for="Age"/>
                <span asp-validation-for="Age"/>
            </div>
            <div>
                <label asp-for="Password">Введите пароль</label><br/>
                <input asp-for="Password"/>
                <span asp-validation-for="Password"/>
            </div>
            <div>
                <label asp-for="ConfirmPassword">Повторите пароль</label><br/>
                <input asp-for="ConfirmPassword"/>
                <span asp-validation-for="ConfirmPassword"/>
            </div>
            <div>
                <label asp-for="ImGorgeous">Я великолепен</label><br/>
                <input asp-for="ImGorgeous"/>
            </div>
            <div>
                <input type="submit" value="Регистрация"/>
            </div>
        </div>
    </form>
</div>
</body>

