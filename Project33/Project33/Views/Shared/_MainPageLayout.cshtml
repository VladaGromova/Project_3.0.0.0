
<!DOCTYPE html>
<html lang="en">
<style>
    footer { background: #f1d8b9}
    H1 {
    font-family: Alice;
    color: #550008;
    }
    .login_register_font {
        font-family: Alice;
        font-size: 15pt; 
        color: #550008;
    }
</style>
<head>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3" style="background: #f1d8b9; position: fixed; width: 100%; z-index: 10">
        <ul class="navbar-nav flex-grow-1 flex-sm-row">
            <a class="navbar-brand" asp-area="" asp-controller="Books" asp-action="Index">
                <img src="~/Assets/UPProjectLogo1.png" alt="Лого" width="50"/>
            </a>
            <a class="navbar-brand" asp-area="" asp-controller="Books" asp-action="Index">
                <img src="~/Assets/UPProjectName.png" alt="Название" height="45"/>
            </a>
        </ul>
        <div class="d-flex justify-content-center">
            <form asp-controller="Books" asp-action="Index" class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" name="SearchString" placeholder="Поиск по названию" aria-label="Search" style="border-radius: 20px 0 0 20px">
                <button class="btn btn-outline-danger my-2 my-sm-0" type="submit" style="border-radius: 0 20px 20px 0">
                    <i class="fa fa-search"></i>
                </button>
            </form>    
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <ul style="padding-top: 15px; list-style-type: none; line-height: 1px; padding-right: 60px">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Edit" style="font-family: Alice; font-size: 15pt; color: #550008">Хочу заредактироваться!</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ProfilePageFromLayout" style="font-family: Alice; font-size: 15pt; color: #550008">Мой профиль</a>
                    </li>
                </ul>
            <ul class="navbar-text my-lg-0 mr-lg-0" style="list-style-type: none; line-height: 5px">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout" style="font-family: Alice; font-size: 20pt; color: #550008">Выход</a>
                </li>
                <li>
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout" style="font-family: Alice; font-size: 5pt; color: #550008">(к сожалению не в окно)</a>
                </li>
            </ul>
        }
        else
        {
            <ul class="navbar-text my-lg-0 mr-lg-0" style="list-style-type: none; line-height: 5px; padding-right: 80px">
                 <li class="nav-item">
                      <a class="nav-link text-dark login_register_font" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
                 </li>
                 <li class="nav-item">
                       <a class="nav-link text-dark login_register_font" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a>
                 </li>
            </ul>
        }
        
    </nav>
</header>
<div class="container" style="margin: 0">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer text-muted box-shadow">
    <div class="container" style="width:100%; margin: 0">
        &copy; 2020 - Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>