
<!DOCTYPE html>
<html lang="en">
<style>
    footer { background: #e7dbc8}
    H1 {
    font-family: Alice;
    color: #550008;
    }
</style>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3" style="background: #f1d8b9; z-index: 1">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Books" asp-action="Index">
                <img src="Assets/UPProjectLogo1.png" alt="Лого" width="50"/>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                     <a class="navbar-brand" asp-area="" asp-controller="Books" asp-action="Index">
                         <img src="Assets/UPProjectName.png" alt="Название" height="45"/>
                     </a>
                    <form asp-controller="Books" asp-action="Index">
                        <p>
                            <H1 style="font-size: 15pt">Поиск по названию:
                            <input type="text" name="SearchString" style="border-radius: 20px 0 0 20px;" >
                            <input type="submit" value="Найти" style="border-radius: 0 20px 20px 0;"/>
                            </H1>
                        </p>
                    </form>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login" style="font-family: Alice; color: #550008">Вход</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register" style="font-family: Alice; color: #550008">Регистрация</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@RenderSection("Scripts", required: false)
</body>
</html>

