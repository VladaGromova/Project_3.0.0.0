@model IEnumerable<Project33.Models.Books>
@{
    Layout = "_UserPageLayout";
}
  
<!DOCTYPE html>
  
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Книжный мир</title>@*@Url.Content("~/Content/Site.css")*@
</head>
<body>
<div>
    <h3>Книги:</h3>
    <table>
        <tr><td><p>Название книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Жанр</p></td>
        </tr>
        @foreach (var b in Model)
        {
            <tr>
                <td>@Html.ActionLink(@b.Name, "BookPageForUsers", "Books", new {id = b.Id})</td>
                
                <td>
                    <p>@b.Author</p></td>
                <td>
                    <p>@b.Genre</p></td>

            </tr>
        }
    </table>
</div>
</body>
</html>